<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/menu_bar_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="12dp"
        app:cardElevation="8dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/main">

        <RelativeLayout
            android:id="@+id/menu_bar_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/add_new_btn"
                style="@style/Widget.Material3.Button.IconButton.Filled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="@string/create_new"
                app:cornerRadius="8dp"
                app:elevation="0dp"
                app:icon="@drawable/ic_add_24" />

            <Button
                android:id="@+id/refresh_btn"
                style="?attr/materialIconButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/add_new_btn"
                app:icon="@drawable/ic_baseline_refresh_24" />

            <Button
                android:id="@+id/filter_btn"
                style="?attr/materialIconButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/refresh_btn"
                android:enabled="false"
                app:icon="@drawable/ic_baseline_filter_list_24"
                tools:ignore="RtlHardcoded" />

            <Button
                android:id="@+id/list_view_btn"
                style="?attr/materialIconButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                app:icon="@drawable/ic_baseline_view_list_24"
                tools:ignore="RelativeOverlap" />

            <Button
                android:id="@+id/card_view_btn"
                style="?attr/materialIconButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/list_view_btn"
                app:icon="@drawable/ic_baseline_view_array_24"
                tools:ignore="RelativeOverlap" />

        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="12dp"
        android:layout_marginVertical="16dp"
        app:cardElevation="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/menu_bar_card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ic_scroll_down_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:srcCompat="@drawable/ic_keyboard_arrow_down_24"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/ic_scroll_down_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-18dp"
                android:layout_marginBottom="8dp"
                app:srcCompat="@drawable/ic_keyboard_arrow_down_24"
                tools:ignore="ContentDescription" />


            <View
                android:id="@+id/card_view_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="4dp"
                android:background="?android:attr/listDivider" />

            <ScrollView
                android:id="@+id/card_view_scroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:paddingHorizontal="4dp"
                android:scrollbarStyle="insideOverlay">

                <TextView
                    android:id="@+id/card_view_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="8dp"
                    android:textSize="20sp"
                    tools:text="Hello World!" />

            </ScrollView>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>